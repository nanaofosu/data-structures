// The DecDate class
// Do not make changes to anything other than the body of decrement() method
// Your name here

public class DecDate extends Date
{
    // copy constructor
    public DecDate(Date o)
    {
        super(o.m_month, o.m_day, o.m_year);
    }
    
    // constructor
    public DecDate(int month, int day, int year)
    {
        super(month, day, year);
    }
    
    public void decrement()
    {
        int curentDay = super.getDay();
        int currentMonth = super.getMonth();
        int currentYear = super.getYear(); // get the current year
        int newDay = curentDay -1; 
        int newMonth = currentMonth;
        int newYear = currentYear;
        boolean leap = false;
       
        //Check for leap year.
        boolean a = (currentYear % 4 == 0) && (currentYear % 100 == 0) && (currentYear % 400 == 0);
        boolean b = (currentYear % 4 == 0) && (currentYear % 100 != 0) && (currentYear % 400 == 0);
        boolean c = (currentYear % 4 == 0) && (currentYear % 100 != 0) && (currentYear % 400 != 0);
        if(a || b || c) {
        		int[] normalYear = {31,28,31,30,31,30,31,31,30,31,30,31};
        		 leap = false;
        }
        else {
        		int[] leapYear = {31,29,31,30,31,30,31,31,30,31,30,31};
        		 leap = true;
        }
        
        if(newDay == 0) {
	        	switch(currentMonth) {
                    case 1: newDay = 31;
                            newMonth = 12;
                            newYear = currentYear - 1;
                            break;
                    case 2: newDay = 31;
                    newMonth = 1;
                            break;
                    case 3: if(leap == true) {
                            newDay = 29;
                            newMonth = 2;
                            break;
                            }
                        newDay = 28;
                        newMonth = 2;
                        break;

                    case 4: newDay = 31;
                    newMonth = 3;
                            break;
                    case 5: newDay = 30;
                    newMonth = 4;
                            break;
                    case 6: newDay = 31;
                    newMonth = 5;
                            break;
                    case 7: newDay = 30;
                    newMonth = 6;
                            break;
                    case 8: newDay = 31;
                    newMonth = 7;
                            break;
                    case 9: newDay = 31;
                    newMonth = 8;
                            break;
                    case 10: newDay = 30;
                    newMonth = 9;
                            break;
                    case 11: newDay = 31;
                    newMonth = 10;
                            break;
                    case 12: newDay = 30;
                    newMonth = 11;
                            break;
        		
        		
	            }
        }
        
        m_day = newDay;
        m_month = newMonth;
        
        
    }  
}
